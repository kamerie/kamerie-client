{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "level": "logging.DEBUG",
            "class": "logging.StreamHandler",
            "formatter": "simple"
        }
    },

    "loggers": {
        "root": {
            "handlers": ["console"],
            "level": "logging.DEBUG"
        }
    }
}